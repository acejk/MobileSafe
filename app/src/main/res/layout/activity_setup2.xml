<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oscar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SetUp1Activity">

    <TextView
        style="@style/TitleStyle"
        android:text="2,手机卡绑定"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过绑定SIM卡\n下次重启手机发现sim卡变化\n就会发送报警短信"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="#000000"
        />

    <com.oscar.mobilesafe.view.SettingItemView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        oscar:destitle="点击绑定sim卡"
        oscar:deson="sim卡已绑定"
        oscar:desoff="sim卡已关闭"
        >
    </com.oscar.mobilesafe.view.SettingItemView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_online"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bind"
            android:layout_centerInParent="true"
            />

        <Button
            style="@style/PreviousBtn"
            />

        <Button
            style="@style/NextBtn"
            />
    </RelativeLayout>

</LinearLayout>
