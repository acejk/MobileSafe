<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 标题 -->
    <style name="TitleStyle">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:background">#0ddcff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <!-- 上一页按钮 -->
    <style name="PreviousBtn">
        <item name="android:text">上一页</item>
        <item name="android:onClick">prevPage</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/pre_next_btn_bg</item>
    </style>

    <!-- 下一页按钮 -->
    <style name="NextBtn">
        <item name="android:text">下一页</item>
        <item name="android:onClick">nextPage</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/pre_next_btn_bg</item>
    </style>

</resources>
